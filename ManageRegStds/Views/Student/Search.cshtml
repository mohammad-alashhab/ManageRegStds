@model ManageRegStds.Models.Student

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search Students</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Name:</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeName" class="control-label">Grade:</label>
                <select asp-for="GradeName" class="form-control">
                    <option value="">Select a Grade</option>
                    <option value="Excellent">Excellent</option>
                    <option value="Very Good">Very Good</option>
                    <option value="Good">Good</option>
                    <option value="Pass">Pass</option>
                    <option value="Fail">Fail</option>
                </select>
                <span asp-validation-for="GradeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" style="margin-top:10px" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.SearchResults != null && ViewBag.NotFound != true)
{
    <h2 class="mt-5">Search Results</h2>
    <table class="table" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background-color: #007BFF; color: #fff;">
                <th style="padding: 10px;">Full Name</th>
                <th style="padding: 10px;">Student Number</th>
                <th style="padding: 10px;">Grade Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in ViewBag.SearchResults)
            {
                <tr>
                    <td style="padding: 10px; border: 1px solid #ccc;">@student.FullName</td>
                    <td style="padding: 10px; border: 1px solid #ccc;">@student.StudentNumber</td>
                    <td style="padding: 10px; border: 1px solid #ccc;">@student.GradeName</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.NotFound != null && ViewBag.NotFound == true)
{
    <h3 class="text-danger mt-5">NOT FOUND</h3>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
